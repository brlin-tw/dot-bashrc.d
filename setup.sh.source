## Include Guard to prevent multiple sourcing
if [ -v _BASH_RC_D_SETUPPED ]; then
    return 0
fi

for source_file in "$HOME"/.bashrc.d/*.source.bash; do
    source "${source_file}"
done

## Set Include Guard
declare _BASH_RC_D_SETUPPED=1
